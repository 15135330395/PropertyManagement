<?xml version="1.0" encoding="UTF-8"?>
<project name="module_propertymanagement" default="compile.module.propertymanagement">
  <dirname property="module.propertymanagement.basedir" file="${ant.file.module_propertymanagement}"/>
  
  <property name="module.jdk.home.propertymanagement" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.propertymanagement" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.propertymanagement" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.propertymanagement" value="-encoding UTF-8 -source 8 -target 8 ${compiler.args}"/>
  
  <property name="propertymanagement.output.dir" value="${module.propertymanagement.basedir}/../out/production/PropertyManagement"/>
  <property name="propertymanagement.testoutput.dir" value="${module.propertymanagement.basedir}/../out/test/PropertyManagement"/>
  
  <path id="propertymanagement.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="propertymanagement.module.production.classpath">
    <path refid="${module.jdk.classpath.propertymanagement}"/>
    <path refid="library.propertymanagement.classpath"/>
    <path refid="library.tomcat_9.0.11.classpath"/>
    <path refid="library.lib.classpath"/>
  </path>
  
  <path id="propertymanagement.runtime.production.module.classpath">
    <pathelement location="${propertymanagement.output.dir}"/>
    <path refid="library.propertymanagement.classpath"/>
    <path refid="library.lib.classpath"/>
  </path>
  
  <path id="propertymanagement.module.classpath">
    <path refid="${module.jdk.classpath.propertymanagement}"/>
    <pathelement location="${propertymanagement.output.dir}"/>
    <path refid="library.propertymanagement.classpath"/>
    <path refid="library.tomcat_9.0.11.classpath"/>
    <path refid="library.lib.classpath"/>
  </path>
  
  <path id="propertymanagement.runtime.module.classpath">
    <pathelement location="${propertymanagement.testoutput.dir}"/>
    <pathelement location="${propertymanagement.output.dir}"/>
    <path refid="library.propertymanagement.classpath"/>
    <path refid="library.tomcat_9.0.11.classpath"/>
    <path refid="library.lib.classpath"/>
  </path>
  
  
  <patternset id="excluded.from.module.propertymanagement">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.propertymanagement">
    <patternset refid="excluded.from.module.propertymanagement"/>
  </patternset>
  
  <path id="propertymanagement.module.sourcepath">
    <dirset dir="${module.propertymanagement.basedir}/../../PropertyManagement">
      <include name="src"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.propertymanagement" depends="compile.module.propertymanagement.production,compile.module.propertymanagement.tests" description="Compile module PropertyManagement"/>
  
  <target name="compile.module.propertymanagement.production" depends="register.custom.compilers" description="Compile module PropertyManagement; production classes">
    <mkdir dir="${propertymanagement.output.dir}"/>
    <javac2 destdir="${propertymanagement.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.propertymanagement}/javac">
      <compilerarg line="${compiler.args.propertymanagement}"/>
      <bootclasspath refid="propertymanagement.module.bootclasspath"/>
      <classpath refid="propertymanagement.module.production.classpath"/>
      <src refid="propertymanagement.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.propertymanagement"/>
    </javac2>
    
    <copy todir="${propertymanagement.output.dir}">
      <fileset dir="${module.propertymanagement.basedir}/../src">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.propertymanagement.tests" depends="register.custom.compilers,compile.module.propertymanagement.production" description="compile module PropertyManagement; test classes" unless="skip.tests"/>
  
  <target name="clean.module.propertymanagement" description="cleanup module">
    <delete dir="${propertymanagement.output.dir}"/>
    <delete dir="${propertymanagement.testoutput.dir}"/>
  </target>
</project>